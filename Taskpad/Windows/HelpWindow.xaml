<Window x:Class="Taskpad.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taskpad.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Taskpad Help" Icon="/Sprites/taskpad.ico" Height="360" Width="600">
    <Grid Width="auto" Height="auto">
        <Image Source="/Sprites/taskpad.ico" Margin="17,24,404,10"/>
        <StackPanel x:Name="app_info_name_panel" Orientation="Vertical" Margin="211,1,22,-64">
            <TextBlock FontFamily="Arial" FontSize="45" Margin="25, 0, 0, 0" FontWeight="UltraBold" FontStyle="Italic" Text="Taskpad"/>
            <TextBlock FontFamily="Arial" FontSize="15" Margin="0, 10, 0, 0" FontWeight="Normal" Text="App Version 1.0.0"/>
            <StackPanel Orientation="Horizontal" Margin="0, 5, 0, 0">
                <TextBlock FontFamily="Arial" FontSize="12.5" Text="Github:" Width="43"/>
                <TextBox FontFamily="Arial" FontSize="12.5" Text="https://github.com/alex3980/Taskpad" IsReadOnly="True" BorderThickness="0" Height="14" Width="324"/>
            </StackPanel>
            <TextBlock FontFamily="Arial" FontSize="10.5" TextWrapping="Wrap" Height="280">
                <Bold>  Taskpad</Bold>  -- easily create and manage tasks. <LineBreak/>For updates, check out the Github repo.<LineBreak/>
                <LineBreak/>
                Projects: Projects are a collection of tasks. You can create new projects from the menu and also copy tasks from a previously existing project. <LineBreak/>
                Tasks: You can create tasks with the button on the main page. <LineBreak/>
                <LineBreak/>
                Saving: Everytime you make a change, the number of unsaved changes will be displayed at the bottom. To save changes press the "Save" menu button. <LineBreak/>
                <LineBreak/>
                Progress: When you check or uncheck a task, the progress bar at the bottom will update correspondingly allowing you to see your overall progress for the opened project. <LineBreak/>
                <LineBreak/>
                Undoing and Redoing: Whenver you check or uncheck, edit or delete a task, you can undo the specified action with the undo and redo buttons in the Edit menu.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>