<Page x:Class="Taskpad.Windows.CopyWindows.CopyTasksWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taskpad.Windows.CopyWindows"
      mc:Ignorable="d"
      Title="Copy tasks from a previous project..." Width="351" Height="358"
      
      >

    <Viewbox Stretch="UniformToFill" Margin="0,0,0,179">
        <Grid Background="White">
            <StackPanel x:Name="project_selector_panel" Orientation="Horizontal" Margin="0,0,0,323">
                <TextBlock Text="Select project to copy from: " FontFamily="Arial" FontSize="8.5" Height="11"/>
                <ComboBox x:Name="copy_project_combo" PreviewMouseUp="copy_project_combo_PreviewMouseUp" FontFamily="Arial" Margin="10, 0, 0, 0" FontSize="8.5" Height="16" Width="166"/>
                <Button x:Name="copy_project_contents_btn" FontFamily="Arial" FontSize="9" Margin="5, 0, 0, 0" Click="copy_project_contents_btn_Click" Content="Copy tasks" IsEnabled="False" Width="61" Height="16"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,31,10,311">
                <TextBlock Text="Fetched tasks:" FontFamily="Arial" FontSize="9" Height="12"/>
                <Button x:Name="select_all_btn" Click="select_all_btn_Click" IsEnabled="False" Content="Select all" FontFamily="Arial" FontSize="8.5" Margin="10, 0, 0, 0" Width="100" Height="14"/>
                <Button x:Name="deselect_all_btn" Click="deselect_all_btn_Click" IsEnabled="False" Content="Deselect all" FontFamily="Arial" FontSize="8.5" Margin="10, 0, 0, 0" Width="100" Height="14"/>
            </StackPanel>
            <StackPanel x:Name="imported_list_search_panel" Orientation="Horizontal" Margin="10,54,10,292">
                <TextBlock Text="Search:" FontFamily="Arial" FontSize="8.5"/>
                <TextBox x:Name="task_searchbox" FontFamily="Arial" TextWrapping="Wrap" Margin="10, 0, 0, 0" FontSize="8" Width="294" Height="11"/>
            </StackPanel>
            <StackPanel x:Name="list_columns" Orientation="Horizontal" Margin="10,68,10,279">
                <TextBlock Text="✔️" FontFamily="Arial" FontSize="10" Width="50"/>
                <TextBlock Text="Name" FontFamily="Arial" Width="75" FontSize="8.5" Height="9"/>
                <TextBlock Text="Priority" FontFamily="Arial" Width="60" FontSize="8.5" Height="9"/>
                <TextBlock Text="Due Date" FontFamily="Arial" Width="45" FontSize="8.5" Height="9"/>
                <TextBlock Text="Completed" FontFamily="Arial" Width="44" FontSize="8.5" Height="9"/>
            </StackPanel>
            <ListView x:Name="imported_tasks_list" Margin="10,81,10,225"/>
            <Button x:Name="confirm_btn" Click="confirm_btn_Click" FontFamily="Arial" FontSize="8.5" Height="20" Content="Copy to new project" Background="LimeGreen" IsEnabled="False" Margin="10,147,10,193"/>
        </Grid>
    </Viewbox>
</Page>
