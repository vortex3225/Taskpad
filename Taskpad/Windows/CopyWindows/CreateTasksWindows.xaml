<Page x:Class="Taskpad.Windows.CopyWindows.CreateTasksWindows"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Taskpad.Windows.CopyWindows"
      mc:Ignorable="d"
      Title="Create new tasks..." Width="351" Height="358">

    <Viewbox Stretch="UniformToFill" Margin="0,0,0,150">
        <Grid Background="White" Width="351" Height="358">
            <StackPanel x:Name="task_input_panel" Orientation="Horizontal" Margin="0,0,0,340">
                <TextBlock Text="Task name:" FontFamily="Arial" FontSize="10" Height="13"/>
                <TextBox x:Name="task_namebox" TextChanged="task_namebox_TextChanged" FontFamily="Arial" FontSize="7.5" Height="14" Margin="10, 0, 0, 0" Width="280"/>
            </StackPanel>
            <StackPanel x:Name="due_date_panel" Orientation="Horizontal" Margin="0,18,0,323">
                <TextBlock Text="Add due date:" FontSize="9" FontFamily="Arial" Height="13"/>
                <RadioButton x:Name="yes_due_date_radio" FontFamily="Arial" FontSize="10" Margin="15, 0, 0, 0" Height="14" IsChecked="False" Click="yes_due_date_radio_Click" Width="63">Yes</RadioButton>
                <RadioButton x:Name="no_due_date_radio" FontFamily="Arial" FontSize="10" Margin="15, 0, 0, 0" Height="14" IsChecked="True" Click="no_due_date_radio_Click" Width="63">No</RadioButton>
            </StackPanel>
            <StackPanel x:Name="priority_panel" Orientation="Horizontal" Margin="0,40,0,295">
                <TextBlock Text="Priority:" FontFamily="Arial" FontSize="9" Height="15"/>
                <ComboBox x:Name="priority_combo" FontFamily="Arial" FontSize="8.5" Height="15" Margin="10, 0, 0, 0" Width="193"/>
                <Button x:Name="set_prior_btn" FontFamily="Arial" FontSize="9" Click="set_prior_btn_Click" Background="Orange" IsEnabled="True" Margin="10, 0, 0, 0" Height="16" Width="62">Set priority</Button> 
            </StackPanel>

            <StackPanel x:Name="date_selector_panel" Orientation="Horizontal" Visibility="Hidden" Margin="0,63,0,276">
                <TextBlock Text="Due date:" FontFamily="Arial" FontSize="9"/>
                <ComboBox x:Name="day_combo" Text="1" FontFamily="Arial" Margin="10, 0, 0, 0" FontSize="7.5" Width="40" Height="15"/>
                <ComboBox x:Name="month_combo" Text="January" DropDownClosed="month_combo_DropDownClosed" FontFamily="Arial" FontSize="7.5" Width="87" Height="15" Margin="5, 0, 0, 0"/>
                <Button x:Name="set_due_btn" Click="set_due_btn_Click" FontFamily="Arial" FontSize="8" Margin="25, 0, 0, 0" Width="90" Height="15">Set due date</Button>
            </StackPanel>
            <Button x:Name="add_task_btn" Click="add_task_btn_Click" Background="Green" FontFamily="Arial" IsEnabled="False" FontSize="10" Margin="10,84,10,260">Add task</Button>

            <StackPanel x:Name="search_panel" Orientation="Horizontal" Margin="0,98,0,242">
                <TextBlock FontFamily="Arial" FontSize="8.5" Height="10">Tasks:</TextBlock>
                <TextBox x:Name="list_searchbox" FontFamily="Arial" FontSize="9.5" Margin="10, 0, 0, 0" Height="13" TextChanged="TextBox_TextChanged" Width="213"/>
                <Button x:Name="search_btn" FontFamily="Arial" IsEnabled="False" FontSize="5" Background="Orange" Margin="5, 0, 0, 0" Height="10" Click="search_btn_Click" Width="30">Search</Button>
                <Button x:Name="delete_btn" FontFamily="Arial" FontSize="5" Background="Red" Margin="2.5, 0, 0, 0" Height="10" Click="delete_btn_Click" Width="60">Delete selected/searched</Button>
            </StackPanel>
            <ListView x:Name="added_tasks_list" Margin="10,116,10,179" SelectionMode="Multiple">
                <ListView.View>
                    <GridView AllowsColumnReorder="False">
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="85"/>
                        <GridViewColumn Header="Priority" DisplayMemberBinding="{Binding Priority}" Width="60"/>
                        <GridViewColumn Header="Due Date" DisplayMemberBinding="{Binding DueDate}" Width="118"/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Button x:Name="create_btn" FontFamily="Arial" FontSize="7.5" Click="create_btn_Click" Background="Green" IsEnabled="False" Margin="10,179,10,164">Create project</Button>
        </Grid>
    </Viewbox>
</Page>
