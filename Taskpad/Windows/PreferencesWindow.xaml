<Window x:Class="Taskpad.Windows.PreferencesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taskpad.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Preferences" Height="350" Width="350">
    <DockPanel x:Name="dockPanel" LastChildFill="False">
        <Menu DockPanel.Dock="Top" Background="{StaticResource WindowBackgroundBrush}">
            <MenuItem x:Name="save_menu_btn" Header="Save" Click="save_menu_btn_Click"/>
            <MenuItem x:Name="reset_menu_btn" Header="Reset to default" Click="reset_menu_btn_Click"/>    
        </Menu>
        <Viewbox Stretch="Uniform">
            <Grid Width="333" Height="300">
                <StackPanel x:Name="options_panel" Orientation="Vertical" Margin="0,0,27,0">
                    <TextBlock FontFamily="Arial" FontSize="10" Text="Display previously opened project message on startup" Height="13"/>
                    <TextBlock FontFamily="Arial" FontSize="10" Margin="0, 2, 0, 0" Text="Automatically open previously opened project on startup" Height="13"/>
                    <TextBlock FontFamily="Arial" FontSize="10" Margin="0, 2, 0, 0" Text="Display warning before deleting projects" Height="13"/>
                    <TextBlock FontFamily="Arial" FontSize="10" Margin="0, 2, 0, 0" Text="Display unsaved changes warning" Height="13"/>
                    <TextBlock FontFamily="Arial" FontSize="10" Margin="0, 2, 0, 0" Text="Display warning before deleting task" Height="13"/>
                </StackPanel>
                <StackPanel x:Name="checkbox_options_panel" Orientation="Vertical" Margin="311,0,-72,0">
                    <CheckBox x:Name="display_previously_open_project_message" Click="display_previously_open_project_message_Click" IsChecked="True" FontFamily="Arial"/>
                    <CheckBox x:Name="open_previously_open_project_on_startup" Click="open_previously_open_project_on_startup_Click" IsChecked="True" FontFamily="Arial"/>
                    <CheckBox x:Name="delete_confirmation_warning" IsChecked="True" Click="delete_confirmation_warning_Click" FontFamily="Arial"/>
                    <CheckBox x:Name="unsaved_changes_warning" IsChecked="True" Click="unsaved_changes_warning_Click" FontFamily="Arial"/>
                    <CheckBox x:Name="delete_task_warning" IsChecked="True" Click="delete_task_warning_Click" FontFamily="Arial"/>

                </StackPanel>
            </Grid>
        </Viewbox>
    </DockPanel>
</Window>
